#!/bin/bash
# Show current container status

# Source common functions
source "$(dirname "$0")/_common"
check_docker

echo "ğŸ“Š Development Environment Status"
echo "================================="
echo ""

# Check if containers are running
if docker-compose -f docker-compose.dev.yml ps | grep -q "Up"; then
    echo "ğŸŸ¢ Containers are running:"
    docker-compose -f docker-compose.dev.yml ps
    echo ""
    echo "ğŸŒ Rails server should be accessible at: http://localhost:3000"
else
    echo "ğŸ”´ No containers are currently running"
    echo "ğŸ’¡ Run './dx/start' to start the development environment"
fi

echo ""
echo "ğŸ“ˆ Docker system info:"
echo "  Images: $(docker images --format "table {{.Repository}}" | grep -c yoo || echo "0") local"
echo "  Containers: $(docker ps -a --format "table {{.Names}}" | grep -c yoo || echo "0") total"